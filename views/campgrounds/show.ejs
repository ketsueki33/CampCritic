<% layout('layouts/boilerplate') %>

<div class="row mb-3">
    <div class="col-8 offset-2">
        <div class="card">
            <img
                src="<%= campground.image %>"
                class="card-img-top"
                alt="campsite"
            />
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">
                    <%= campground.location %>
                </li>
                <li class="list-group-item">â‚¹ <%= campground.price %> / night</li>
            <div class="card-body">
                <a href="/campgrounds" class="card-link btn btn-info">Back</a>
                <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-warning">Edit</a>
                <form class="d-inline ms-2" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

