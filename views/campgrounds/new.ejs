<% layout('layouts/boilerplate') %>

<div class="row mb-5">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form
            action="/campgrounds"
            method="POST"
            novalidate
            class="validated-form"
            enctype="multipart/form-data"
        >
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[title]"
                    required
                    id="title"
                />
                <div class="invalid-feedback">Enter a valid name</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input
                    class="form-control"
                    type="text"
                    name="campground[location]"
                    required
                    id="location"
                />
                <div class="invalid-feedback">Enter a valid location</div>
            </div>
            <div class="mb-3">
                <label for="price">Campground Price:</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¹</span>
                    <input
                        type="text"
                        id="price"
                        name="campground[price]"
                        required
                        class="form-control"
                        placeholder="0.00"
                        aria-label="price"
                        aria-describedby="price-label"
                    />
                    <div class="invalid-feedback">Enter a valid price</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description:</label>
                <textarea
                    class="form-control"
                    type="text"
                    name="campground[description]"
                    required
                    id="description"
                ></textarea>
                <div class="invalid-feedback">Please add a description</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add images:</label>
                <input
                    class="form-control"
                    type="file"
                    id="image"
                    name="image"
                    multiple
                />
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add campground</button>
            </div>
        </form>
        <a class="btn btn-warning" href="/campgrounds">Cancel</a>
    </div>
</div>
